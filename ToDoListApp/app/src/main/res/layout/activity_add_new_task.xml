<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewTaskActivity">

    <EditText
        android:id="@+id/etNewTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="New Task Title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/etNewTaskTitle"
        app:layout_constraintTop_toBottomOf="@+id/etNewTaskDescription" />

    <EditText
        android:id="@+id/etNewTaskDescription"
        android:layout_width="375dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="New task description"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/etNewTaskTitle"
        app:layout_constraintTop_toBottomOf="@+id/etNewTaskTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>